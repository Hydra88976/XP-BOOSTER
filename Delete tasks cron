name: Run 4 Python Scripts Hourly

on:
  workflow_dispatch:
  schedule:
    - cron: '0 * * * *'  # Runs at the top of every hour (UTC)

jobs:
  run-scripts:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      actions: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run script1.py
        run: python cron_sxp.py

      - name: Run script2.py
        run: python cron_gxp.py

      - name: Run script3.py
        run: python cron_sxp2.py

      - name: Run script4.py
        run: python cron_sxp3.py

      - name: Delete previous workflow runs
        env:
          GH_TOKEN: ${{ secrets.PAT_FOR_WORKFLOW_DELETION }}
        run: |
          gh run list --workflow "${{ github.workflow }}" --json databaseId --jq '.[].databaseId' | tail -n +2 | xargs -r -I {} gh run delete {}
